<Window xmlns="https://github.com/avaloniaui"
        x:Name="Window"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AutoWikiEditor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AutoWikiEditor.Views.MainWindow"
        MinHeight="500"
        MinWidth="800"
        Icon="/Assets/avalonia-logo.ico"
        Title="AutoWikiEditor">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Reset to original default settings" />
                <MenuItem Header="Open settings..." />
                <Separator />
                <MenuItem Header="Save settings" />
                <MenuItem Header="Save settings as..." />
                <MenuItem Header="Save settings as default" />
                <Separator />
                <MenuItem Header="Login/Profiles..." />
                <MenuItem Header="Log out" />
                <MenuItem Header="Refresh Status/Typos" />
                <Separator />
                <MenuItem 
                    Header="Exit" 
                    Command="{Binding ExitCommand}"
                    CommandParameter="{Binding ElementName=Window}"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Show toolbar" />
                <MenuItem Header="Show control panel" />
                <MenuItem Header="Enlarge Edit box" />
                <MenuItem Header="Show Edit Box Toolbar" />
                <Separator />
                <MenuItem Header="Display false positives button" />
            </MenuItem>
            <MenuItem Header="List">
                <MenuItem Header="Keep alphabetized" />
                <MenuItem Header="Remove duplicates" />
                <MenuItem Header="Remove non-mainspace" />
                <Separator />
                <MenuItem Header="Convert to talk pages" />
                <MenuItem Header="Convert from talk pages" />
                <Separator />
                <MenuItem Header="Filter..." />
                <MenuItem Header="Save list..." />
                <MenuItem Header="lear current list..." />
            </MenuItem>
            <MenuItem Header="Plugins">
                <MenuItem Header="Load..." />
                <MenuItem Header="Manager..." />
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Preferences..." />
                <MenuItem Header="Summaries..." />
                <MenuItem Header="Default Edit Summaries..." />
                <MenuItem Header="Auto save settings file every 10 edits" />
                <Separator />
                <MenuItem Header="Use pre-parse mode" />
                <MenuItem Header="Follow redirects" />
                <Separator />
                <MenuItem Header="Apply changes automatically" />
                <MenuItem Header="Auto focus end of the text box" />
                <MenuItem Header="Do not use section edit summaries" />
                <MenuItem Header="Restrict {{DEFAULTSORT}} change/addition" />
                <MenuItem Header="Restrict orphan tag addition to linkless pages" />
                <MenuItem Header="Do not apply WP:MOS fixes" />
                <MenuItem Header="Highlight syntax in edit box" />
                <MenuItem Header="Highlight Find matches" />
                <MenuItem Header="Highlight errors" />
                <Separator />
                <MenuItem Header="Mark all as minor" />
                <MenuItem Header="Watchlist behaviour">
                    <MenuItem Header="Add all to watchlist" />
                    <MenuItem Header="Remove all from watchlist" />
                    <MenuItem Header="Leave watchlist unchanged" />
                    <MenuItem Header="Use MW preferences" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Sort interwiki links" />
                <MenuItem Header="Replace Reference Tags" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Make Module" />
                <MenuItem Header="External processing" />
                <Separator/>
                <MenuItem Header="Regex tester" />
                <MenuItem Header="Database scanner" />
                <MenuItem Header="List comparer" />
                <MenuItem Header="List splitter" />
                <Separator/>
                <MenuItem Header="Reset saved/skipped counts" />
                <MenuItem Header="Submit stats" />
                <Separator/>
                <MenuItem Header="Profile typos" />
                <MenuItem Header="Invalidate cache" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Help"/>
                <MenuItem Header="Usage statistics"/>
                <MenuItem Header="Check for updates"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Grid RowDefinitions="*,Auto,Auto">
            <Grid Grid.Row="0">
                <Rectangle Fill="Blue" />
            </Grid>
            <Grid Grid.Row="1" Height="500">
                <Grid ColumnDefinitions="Auto,Auto,*">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto" Column="0" Width="350" Margin="5">
                            <Label Grid.Row="0" Margin="5" Content="Make list"/>
                            <Grid Grid.Row="1" Margin="5" ColumnDefinitions="*,200" VerticalAlignment="Center">
                                <Label Grid.Column="0" VerticalAlignment="Center">Sources: </Label>
                                <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" SelectedIndex="0" Items="{Binding Sources}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding }" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Row="2" Margin="5" ColumnDefinitions="*,200" VerticalAlignment="Center">
                                <Label VerticalAlignment="Center" Grid.Column="0">Param title: </Label>
                                <TextBox Grid.Column="1" HorizontalAlignment="Stretch" />
                            </Grid>
                            <Button Grid.Row="3" Margin="5" HorizontalAlignment="Center">Make list</Button>
                            <Grid Grid.Row="4" Margin="5" ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                                <TextBox Grid.Column="0" HorizontalAlignment="Stretch" />
                                <Button VerticalAlignment="Center" Grid.Column="1">+</Button>
                            </Grid>
                            <Grid Grid.Row="5">
                                <ListBox SelectionMode="Multiple,Toggle" Margin="5" ScrollViewer.HorizontalScrollBarVisibility="Visible" Items="{Binding Pages}"/>
                            </Grid>
                            <Grid Grid.Row="6" ColumnDefinitions="*,*">
                                <Button HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="150" Grid.Column="0">Remove</Button>
                                <Button HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="150" Grid.Column="1">Filter</Button>
                            </Grid>
                    </Grid>
                    <Grid Column="1" Width="450">
                        <Rectangle Fill="Gray"></Rectangle>
                    </Grid>
                    <Grid Column="2">
                        <Rectangle Fill="Black"></Rectangle>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Height="20">
                <Rectangle Fill="White"></Rectangle>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
