<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AutoWikiEditor.Views.ControlViews.More">
	<Grid RowDefinitions="Auto,Auto,Auto" Margin="3">
		<Border Margin="3" Grid.Row="0" BorderThickness="1" BorderBrush="Black">
			<Grid Margin="3" RowDefinitions="Auto,Auto,*,Auto">
				<Label Grid.Row="0">Append/Prepend text</Label>
				<Grid Grid.Row="1" ColumnDefinitions="*,*,*,*">
					<CheckBox Grid.Column="0">Enabled</CheckBox>
					<RadioButton Grid.Column="2" GroupName="Mode" Content="Append"/>
					<RadioButton Grid.Column="3" GroupName="Mode" Content="Prepend"/>
				</Grid>
				<TextBox Height="70" Grid.Row="2" AcceptsReturn="True" TextWrapping="Wrap" />
				<Grid ColumnDefinitions="Auto,Auto,Auto,*" Grid.Row="3">
					<Label Grid.Column="0" VerticalAlignment="Center">Use: </Label>
					<NumericUpDown Grid.Column="1" ShowButtonSpinner="False" Value="10" Width="5"/>
					<Label Margin="10 0 0 0" Grid.Column="2" VerticalAlignment="Center"> newlines </Label>
					<CheckBox HorizontalAlignment="Right" Grid.Column="3">Sort meta data after</CheckBox>
				</Grid>
			</Grid>
		</Border>
		<Border Margin="3" Grid.Row="1" BorderThickness="1" BorderBrush="Black">
			<Grid Margin="3" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
				<Label Grid.Row="0">Files</Label>
				<ComboBox SelectedIndex="0" Grid.Column="0" Grid.Row="1">
					<ComboBoxItem>Choose a task...</ComboBoxItem>
					<ComboBoxItem>Replace file:</ComboBoxItem>
					<ComboBoxItem>Remove file:</ComboBoxItem>
					<ComboBoxItem>Comment out file:</ComboBoxItem>
				</ComboBox>
				<TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1" />
				<Label HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2">With: </Label>
				<TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2" />
				<CheckBox Grid.Row="3">Skip if no file changed</CheckBox>
			</Grid>
		</Border>
		<Border Margin="3" Grid.Row="2" BorderThickness="1" BorderBrush="Black">
			<Grid Margin="3" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
				<Label Grid.Row="0">Category</Label>
				<ComboBox SelectedIndex="0" Grid.Column="0" Grid.Row="1">
					<ComboBoxItem>Choose a task...</ComboBoxItem>
					<ComboBoxItem>Replace category:</ComboBoxItem>
					<ComboBoxItem>Add category:</ComboBoxItem>
					<ComboBoxItem>Remove category:</ComboBoxItem>
				</ComboBox>
				<TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1" />
				<Label HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2">With: </Label>
				<TextBox HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2" />
				<CheckBox Grid.Row="3">Skip if no file changed</CheckBox>
			</Grid>
		</Border>
		<Border Margin="3" Grid.Row="2" BorderThickness="1" BorderBrush="Black">

		</Border>
	</Grid>
</UserControl>
